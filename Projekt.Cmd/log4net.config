<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>

  <log4net>
    
    <appender name="CmdAppender" type="log4net.Appender.FileAppender">
      <file value="CmdLog.txt" />
      <appendToFile value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%level %date (%class:%line): %message%newline" />
      </layout>
    </appender>
    <!-- Level hierarchy: ALL, DEBUG, INFO, WARN, ERROR, FATAL, OFF-->
    
    <logger name="CmdLogger">
      <level value="INFO" />
      <appender-ref ref="CmdAppender" />
    </logger>
    
  </log4net>
</configuration>